<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="610.8dp"
    android:layout_width="match_parent"
    android:background="@drawable/background" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StandUpsDialog" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:textSize="17sp"
        android:text="What did you do in the previous?"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/standupsprevious"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:textSize="18sp"
        android:background="@drawable/rectangle"
        android:layout_weight="0.14" >
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.4dp"
        android:layout_weight="0.14"
        android:textSize="17sp"
        android:text="What are you planning to do now?"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/standupsnow"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_weight="0.14"
        android:textSize="18sp"
        android:background="@drawable/rectangle" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:textSize="17sp"
        android:layout_marginTop="26.4dp"
        android:text="What were the problems encountered?"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/standupsproblem"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="114dp"
        android:layout_weight="0.14"
        android:background="@drawable/rectangle" />

    <Button
        android:id="@+id/standupdone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="22.8dp"
        android:layout_weight="0.14"
        android:background="@drawable/loginbuttonstyle"
        android:fontFamily="Arial"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="19.2sp" />
</LinearLayout>

</ScrollView>