<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:background="#15357ec7" >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <Spinner
        android:id="@+id/daySpinner"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/monthSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/daySpinner"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/daySpinner"
        android:text="Select a day"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/monthSpinner"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="17dp"
        android:text="Select a month"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yearSpinner"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="17dp"
        android:text="Select a year"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_above="@+id/monthSpinner"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp" />

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/yearSpinner"
        android:layout_marginBottom="19dp" />

    <Button
        android:id="@+id/querybutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/daySpinner"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="18dp"
        android:background="@drawable/loginbuttonstyle"
        android:text="Select"
        android:textColor="#ffffff"
        android:textSize="18dp" />

	</RelativeLayout>
</LinearLayout>