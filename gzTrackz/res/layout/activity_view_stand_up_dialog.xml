<ScrollView 
    android:layout_height="500dp"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewStandUpDialog" >

    <TextView
        android:id="@+id/standupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="June 20, 2014" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/standupdate"
        android:layout_below="@+id/standupdate"
        android:background="#357ec7" />

    <TextView
        android:id="@+id/standuptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/standupdate"
        android:layout_alignRight="@+id/view1"
        android:text="9:00 am" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginTop="22dp"
        android:textColor="#000000"
        android:text="What I did in the previous" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/standupprevioustext"
        android:layout_marginTop="90dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:text="What I plan to do now" />

    <TextView
        android:id="@+id/standupstodonowtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/standuptime"
        android:text="This is what I plan to do now" />

    <TextView
        android:id="@+id/standupprevioustext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="This is what I did in the previous" />

    <View
        android:id="@+id/View01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/standupstodonowtext"
        android:layout_marginTop="90dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/View01"
        android:layout_below="@+id/View01"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:text="Problems encountered" />

    <TextView
        android:id="@+id/standupsproblemtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/standupprevioustext"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:text="This is what I did in the previous" />

</RelativeLayout>
</ScrollView>